<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="5dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/dm019_2_tv_name"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="　书名："
      android:textColor="@color/black"
      android:textSize="17sp" />
    <EditText
      android:id="@+id/dm019_2_et_name"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginTop="3dp"
      android:layout_marginBottom="3dp"
      android:layout_weight="1"
      android:background="@drawable/editext_selector"
      android:hint="请输入书籍名称"
      android:inputType="text"
      android:textColor="@color/black"
      android:textSize="17sp" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/dm019_2_tv_author"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="　作者："
      android:textColor="@color/black"
      android:textSize="17sp" />
    <EditText
      android:id="@+id/dm019_2_et_author"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginTop="3dp"
      android:layout_marginBottom="3dp"
      android:layout_weight="1"
      android:background="@drawable/editext_selector"
      android:hint="请输入作者姓名"
      android:textColor="@color/black"
      android:textSize="17sp" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/dm019_2_tv_press"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="出版社："
      android:textColor="@color/black"
      android:textSize="17sp" />
    <EditText
      android:id="@+id/dm019_2_et_press"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginTop="3dp"
      android:layout_marginBottom="3dp"
      android:layout_weight="1"
      android:background="@drawable/editext_selector"
      android:hint="请输入出版社名称"
      android:textColor="@color/black"
      android:textSize="17sp" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/dm019_2_tv_price"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="　价格："
      android:textColor="@color/black"
      android:textSize="17sp" />
    <EditText
      android:id="@+id/dm019_2_et_price"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginTop="3dp"
      android:layout_marginBottom="3dp"
      android:layout_weight="1"
      android:background="@drawable/editext_selector"
      android:hint="请输入书籍价格"
      android:inputType="numberDecimal"
      android:textColor="@color/black"
      android:textSize="17sp" />
  </LinearLayout>

  <Button
    android:id="@+id/dm019_2_btn_save"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="添加"
    android:textColor="@color/black"
    android:textSize="17sp" />

  <Button
    android:id="@+id/dm019_2_btn_delete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="删除"
    android:textColor="@color/black"
    android:textSize="17sp" />

  <Button
    android:id="@+id/dm019_2_btn_update"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="修改"
    android:textColor="@color/black"
    android:textSize="17sp" />

  <Button
    android:id="@+id/dm019_2_btn_query"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="查询"
    android:textColor="@color/black"
    android:textSize="17sp" />

  <TextView
    android:id="@+id/dm019_2_tv_str"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="..."
    android:textColor="@color/black"
    android:textSize="17sp" />

</LinearLayout>