            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_txt10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_txt"
            android:textColor="#FFFFFF"
            android:background="@color/blue"
            android:textSize="30sp" />

