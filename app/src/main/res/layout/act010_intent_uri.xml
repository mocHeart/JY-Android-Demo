<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="点击以下按钮将向号码12345发起请求"
        android:textSize="20sp" />

    <Button
        android:id="@+id/dm010_dial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳到拨号页面" />

    <Button
        android:id="@+id/dm010_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳到短信页面" />

    <Button
        android:id="@+id/dm010_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳到我的页面" />

    <TextView
        android:id="@+id/intent_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天天气真不错"
        android:textColor="#343400"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sendToNextAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转并发生上面的文字到下一个Activity" />

    <TextView
        android:id="@+id/dm010_tv_show2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="下一个页面传递回来的数据"
        android:textSize="20sp" />


</LinearLayout>